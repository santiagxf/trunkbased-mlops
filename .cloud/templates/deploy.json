{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "Resource group where 'Data' resources will be provisioned"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Specifies the location for all resources."
            }
        },
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Specifies the name of the Azure Machine Learning workspace."
            }
        },
        "computeAdminUserName": {
            "type": "securestring",
            "metadata": {
                "description": "The name of the administrator user account which can be used to SSH into nodes. It must only contain lower case alphabetic characters [a-z]."
            }
        },
        "computeAdminUserPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password of the administrator user account."
            }
        },
        "cpuTrainComputeSize": {
            "type": "string",
            "metadata": {
                "description": "The VM size for the CPU compute train cluster"
            }
        },
        "gpuTrainComputeSize": {
            "type": "string",
            "metadata": {
                "description": "The VM size for the CPU compute train cluster"
            }
        },
        "cpuTrainNodeCount": {
            "type": "int",
            "metadata": {
                "description": "The number of nodes for the CPU compute train cluster"
            }
        },
        "gpuTrainNodeCount": {
            "type": "int",
            "metadata": {
                "description": "The number of nodes for the CPU compute train cluster"
            }
        },
        "datasetsAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the storage account where datasets will be placed"
            }
        },
        "datasetsResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Name of the resource group where the storage account for datasets is placed"
            }
        },
        "datasetsFileSystem": {
            "type": "string",
            "metadata": {
                "description": "Name of the file system where datasets will be placed"
            }
        },
        "datasetsClientId": {
            "type": "securestring",
            "metadata": {
                "description": "Client ID used to query data from the account"
            }
        },
        "datasetsClientSecret": {
            "type": "securestring",
            "metadata": {
                "description": "Client secret used to query data from the account"
            }
        },
        "secretsManagementObjectId": {
            "type": "securestring",
            "metadata": {
                "description": "Object ID used for managing secrets in Key Vault"
            }
        },
        "adoOrganizationName": {
            "type": "string",
            "metadata": {
                "description": "Azure DevOps Organization Name"
            }
        },
        "adoProjectName": {
            "type": "string"
        },
        "adoAPIVersion": {
            "defaultValue": "7.1-preview.7",
            "type": "string"
        },
        "adoModelCdPipelineDefinitionId": {
            "type": "int"
        },
        "adoPAT": {
            "type": "securestring",
            "metadata": {
                "description": "Personal Authentication Token for Azure DevOps"
            }
        }
    },
    "functions": [],
    "variables": {
        "workspaceDeploymentName": "[concat('azureml-', deployment().name)]",
        "logicAppResourceName": "[replace(parameters('workspaceName'), 'mlw', 'lga-modelcd')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[variables('workspaceDeploymentName')]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "workspace/workspace.json"
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "resourceGroupName": {
                        "value": "[parameters('resourceGroupName')]"
                    },
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "servicePrincipalObjectId": {
                        "value": "[parameters('secretsManagementObjectId')]"
                    },
                    "tagValues": {
                        "value": {
                            "workspace": "[parameters('workspaceName')]"
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[concat('cpu-compute-', variables('workspaceDeploymentName'))]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "workspace/compute/cluster.json"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "clusterName": {
                        "value": "cpuprdev"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminUserName": {
                        "value": "[parameters('computeAdminUserName')]"
                    },
                    "adminUserPassword": {
                        "value": "[parameters('computeAdminUserPassword')]"
                    },
                    "maxNodeCount": {
                        "value": "[parameters('cpuTrainNodeCount')]"
                    },
                    "vmSize": {
                        "value": "[parameters('cpuTrainComputeSize')]"
                    }
                }
            },
            "dependsOn": ["[variables('workspaceDeploymentName')]"]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[concat('gpu-compute-', variables('workspaceDeploymentName'))]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "workspace/compute/cluster.json"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "clusterName": {
                        "value": "gpuprdev"
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminUserName": {
                        "value": "[parameters('computeAdminUserName')]"
                    },
                    "adminUserPassword": {
                        "value": "[parameters('computeAdminUserPassword')]"
                    },
                    "maxNodeCount": {
                        "value": "[parameters('gpuTrainNodeCount')]"
                    },
                    "vmSize": {
                        "value": "[parameters('gpuTrainComputeSize')]"
                    }
                }
            },
            "dependsOn": ["[variables('workspaceDeploymentName')]"]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[concat('datasource-trusted-', variables('workspaceDeploymentName'))]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "workspace/source/adlg2.json"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "datastoreName": {
                        "value": "trusted"
                    },
                    "storageAccountResourceGroup": {
                        "value": "[parameters('datasetsResourceGroup')]"
                    },
                    "accountName": {
                        "value": "[parameters('datasetsAccountName')]"
                    },
                    "fileSystem": {
                        "value": "[parameters('datasetsFileSystem')]"
                    },
                    "clientId": {
                        "value": "[parameters('datasetsClientId')]"
                    },
                    "clientSecret": {
                        "value": "[parameters('datasetsClientSecret')]"
                    }
                }
            },
            "dependsOn": ["[variables('workspaceDeploymentName')]"]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[concat('ado-automation-', variables('workspaceDeploymentName'))]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "automation/lgaTriggerAdoPipeline.json"
                },
                "parameters": {
                    "logicAppResourceName": {
                        "value": "[variables('logicAppResourceName')]"
                    },
                    "adoOrganizationName": {
                        "value": "[parameters('adoOrganizationName')]"
                    },
                    "adoProjectName": {
                        "value": "[parameters('adoProjectName')]"
                    },
                    "adoPipelineDefinitionId": {
                        "value": "[parameters('adoModelCdPipelineDefinitionId')]"
                    },
                    "adoPAT": {
                        "value": "[parameters('adoPAT')]"
                    }
                }
            },
            "dependsOn": ["[variables('workspaceDeploymentName')]"]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[concat('model-automation', variables('workspaceDeploymentName'))]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "automation/egrModelRegistered.json"
                },
                "parameters": {
                    "workspaceResourceId": {
                        "value": "[resourceId(parameters('resourceGroupName'), 'Microsoft.MachineLearningServices/workspaces', parameters('workspaceName'))]"
                    },
                    "targetLogicAppName": {
                        "value": "[parameters('logicAppResourceName')]"
                    }
                }
            },
            "dependsOn": ["[concat('logicapp-automation-', variables('workspaceDeploymentName'))]"]
        }
    ],
    "outputs": {}
}